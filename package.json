{
  "name": "dicksword",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "server": "node server/index.js",
    "client": "cd client && npx vite --host",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm install && cd .. && cd client && npx vite build && cd ..",
    "start": "NODE_ENV=production node server/index.js",
    "postinstall": "cd client && npm install && npx vite build"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.7.0",
    "concurrently": "^9.1.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.8.0",
    "uuid": "^10.0.0"
  }
}
